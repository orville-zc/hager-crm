@model hager_crm.Models.Company

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete compay? @Model.Name</h3>
<div>
    <h4>Company</h4>
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" name="returnURL" value="@ViewData["returnURL"]" />
        <hr />
        <ul class="nav nav-pills" id="myTabs" role="tablist">
            <li class="nav-item">
                <a href="#basic" aria-controls="basic" role="tab" class="nav-link active" name="basic" data-toggle="tab" aria-selected="false">Basic Information</a>
            </li>

            <li class="nav-item">
                <a href="#moreinfo" aria-controls="moreinfo" role="tab" class="nav-link" name="moreinfo" data-toggle="tab" aria-selected="false">Billing and Shipping</a>
            </li>

            <li class="nav-item">
                <a href="#emergencycontact" aria-controls="emergencycontact" role="tab" class="nav-link" name="emergencycontact" data-toggle="tab" aria-selected="false">More Information</a>
            </li>
        </ul>

        <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade ml-3 show active" id="basic">
                <br />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Location)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Location)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreditCheck)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreditCheck)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DateChecked)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DateChecked)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BillingTerm)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BillingTerm.Terms)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Currency)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Currency.CurrencyName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Phone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Website)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Website)
                    </dd>
                </dl>

            </div>

            <div role="tabpanel" class="tab-pane fade ml-3" id="moreinfo" aria-labelledby="moreinfo-tab">
                <br />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BillingAddress1)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BillingAddress1)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BillingAddress2)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BillingAddress2)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BillingProvince)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BillingProvince.ProvinceName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BillingPostalCode)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BillingPostalCode)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BillingCountry)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BillingCountry.CountryName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ShippingAddress1)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ShippingAddress1)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ShippingAddress2)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ShippingAddress2)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ShippingProvince)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ShippingProvince.ProvinceName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ShippingPostalCode)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ShippingPostalCode)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ShippingCountry)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ShippingCountry.CountryName)
                    </dd>
                </dl>

            </div>

            <div role="tabpanel" class="tab-pane fade ml-3" id="emergencycontact" aria-labelledby="moreinfo-tab">
                <br />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Customer)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Customer)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CustomerType)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CustomerType.Type)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Vendor)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Vendor)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.VendorType)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.VendorType.Type)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Contractor)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Contractor)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ContractorType)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ContractorType.Type)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Active)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Active)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Notes)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Notes)
                    </dd>
                </dl>

            </div>

        </div>


        <input type="hidden" asp-for="CompanyID" />
        <input type="hidden" name="CType" id="CType" value="@Context.Request.Query["CType"]" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @if (String.IsNullOrEmpty(ViewData["returnURL"].ToString()))
        {
            <a asp-action="Index" asp-route-CType="@Context.Request.Query["CType"]">Back to @Context.Request.Query["CType"] Company List</a>
        }
        else
        {
            <a href='@ViewData["returnURL"]'>Back to @Context.Request.Query["CType"] Company List</a>
        }

    </form>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {
        $("#@Context.Request.Query["CType"].ToString().ToLower()CompaniesSubmenu").attr("style", "color: #862633; background: #fff;");
    })
</script>