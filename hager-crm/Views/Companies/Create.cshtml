@model hager_crm.Models.Company

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Company</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-lg-10 col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="CType" id="CType" value="@Context.Request.Query["CType"]" />
            <div class="row">
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Location" class="control-label"></label>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="CreditCheck" /> @Html.DisplayNameFor(model => model.CreditCheck)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateChecked" class="control-label"></label>
                        <input asp-for="DateChecked" class="form-control" />
                        <span asp-validation-for="DateChecked" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BillingTermID" class="control-label"></label>
                        <select asp-for="BillingTermID" class="form-control" asp-items="ViewBag.BillingTermID"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CurrencyID" class="control-label"></label>
                        <select asp-for="CurrencyID" class="form-control" asp-items="ViewBag.CurrencyID">
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Website" class="control-label"></label>
                        <input asp-for="Website" class="form-control" />
                        <span asp-validation-for="Website" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BillingAddress1" class="control-label"></label>
                        <input asp-for="BillingAddress1" class="form-control" />
                        <span asp-validation-for="BillingAddress1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BillingAddress2" class="control-label"></label>
                        <input asp-for="BillingAddress2" class="form-control" />
                        <span asp-validation-for="BillingAddress2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BillingProvinceID" class="control-label"></label>
                        <select asp-for="BillingProvinceID" class="form-control dropdown-province link-edit-bill-province">
                            <option value="">-- Select Province --</option>
                            @foreach (var item in ViewBag.BillingProvinceID.Items)
                            {
                                <option value="@item.Value.Split(';')[0]"
                                        data-country="@item.Value.Split(';')[1]">@item.Text</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="BillingPostalCode" class="control-label"></label>
                        <input asp-for="BillingPostalCode" class="form-control" />
                        <span asp-validation-for="BillingPostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BillingCountryID" class="control-label"></label>
                        <select asp-for="BillingCountryID" class="form-control dropdown-country" 
                                data-link="link-edit-bill-province"  asp-items="ViewBag.BillingCountryID"></select>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="ShippingAddress1" class="control-label"></label>
                        <input asp-for="ShippingAddress1" class="form-control" />
                        <span asp-validation-for="ShippingAddress1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShippingAddress2" class="control-label"></label>
                        <input asp-for="ShippingAddress2" class="form-control" />
                        <span asp-validation-for="ShippingAddress2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShippingProvinceID" class="control-label"></label>
                        <select asp-for="ShippingProvinceID" class="form-control dropdown-province link-edit-ship-province">
                            <option value="">-- Select Province --</option>
                            @foreach (var item in ViewBag.ShippingProvinceID.Items)
                            {
                                <option value="@item.Value.Split(';')[0]"
                                        data-country="@item.Value.Split(';')[1]">@item.Text</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShippingPostalCode" class="control-label"></label>
                        <input asp-for="ShippingPostalCode" class="form-control" />
                        <span asp-validation-for="ShippingPostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShippingCountryID" class="control-label"></label>
                        <select asp-for="ShippingCountryID" class="form-control dropdown-country" 
                                data-link="link-edit-ship-province" asp-items="ViewBag.ShippingCountryID"></select>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Customer" /> @Html.DisplayNameFor(model => model.Customer)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerTypeID" class="control-label"></label>
                        <select asp-for="CustomerTypeID" class="form-control" asp-items="ViewBag.CustomerTypeID">
                            <option value="">Select Customer Type</option>
                        </select>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Vendor" /> @Html.DisplayNameFor(model => model.Vendor)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="VendorTypeID" class="control-label"></label>
                        <select asp-for="VendorTypeID" class="form-control" asp-items="ViewBag.VendorTypeID">
                            <option value="">Select Vendor Type</option>
                        </select>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Contractor" /> @Html.DisplayNameFor(model => model.Contractor)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContractorTypeID" class="control-label"></label>
                        <select asp-for="ContractorTypeID" class="form-control" asp-items="ViewBag.ContractorTypeID">
                            <option value="">Select Contractor Type</option>
                        </select>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Notes" class="control-label"></label>
                        <input asp-for="Notes" class="form-control" />
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                    <div>
                        <a asp-action="Index" asp-route-CType="@Context.Request.Query["CType"]">Back to @Context.Request.Query["CType"] Company List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {
        $("#@Context.Request.Query["CType"].ToString().ToLower()CompaniesSubmenu").attr("style", "color: #862633; background: #fff;");
    })
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
