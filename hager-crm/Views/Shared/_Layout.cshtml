<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Hager CRM</title>

    @* Bootstrap and CSS*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="wrapper">
        @* Sidebar *@
        <nav id="sidebar">
            <div class="sidebar-header">
                <div>
                    <img src="~/assets/AppLogo.png" alt="Application Logo"/>
                </div>
                <button type="button" id="sidebarCollapse" class="btn">
                    <i class="fas fa-align-left"></i>
                    <span>≡</span>
                </button>
            </div>

            @* The menu and links *@
            <ul class="list-unstyled components">
                <li><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li>
                    <a href="#companiesSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Companies</a>
                    <ul class="collapse list-unstyled" id="companiesSubmenu">
                        <li><a href="#">All Companies</a></li>
                        <li><a href="#">Customers</a></li>
                        <li><a href="#">Vendors</a></li>
                        <li><a href="#">Contractors</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#contactsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Contacts</a>
                    <ul class="collapse list-unstyled" id="contactsSubmenu">
                        <li><a href="#">All Contacts</a></li>
                        <li><a href="#">Customer Contacts</a></li>
                        <li><a href="#">Vendor Contacts</a></li>
                        <li><a href="#">Contractor Contacts</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#managementSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Management</a>
                    <ul class="collapse list-unstyled" id="managementSubmenu">
                        <li><a asp-controller="Employees" asp-action="Index">Employees</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#adminSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Admin Options</a>
                    <ul class="collapse list-unstyled" id="adminSubmenu">
                        <li><a asp-controller="Configuration" asp-action="Index">Configuration</a></li>
                    </ul>
                </li>
            </ul>
        </nav>

        @* Navbar *@
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="navbar-brand">
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a <partial name="_LoginPartial"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        @* Page Content *@
        <div id="content">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        @* Page foot *@
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - hager_crm - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- jQuery, Bootstrap and Scroller from the CDN -->
    <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>

    @* Toggle collapse button with JS*@
    <script type="text/javascript">
        $(document).ready(function () {
            let localStorage = window.localStorage;
            if (localStorage.getItem('menuHidden') === null)
                localStorage.setItem('menuHidden', '');

            if (!!localStorage.getItem('menuHidden')) {
                let $elements = $('#sidebar, #content, .footer, .navbar');
                $elements.addClass('notransition');
                $elements.addClass('active');
                $('.collapse.in').addClass('in');
                $elements[0].offsetHeight; // Cool trick, force browser to flush css transitions
                $elements.removeClass('notransition');
            }

            $("#sidebar").mCustomScrollbar({
                theme: "minimal"
            });

            $('#sidebarCollapse').on('click', function () {
                if (!!localStorage.getItem('menuHidden')) {
                    $('#sidebar, #content, .footer, .navbar').removeClass('active');
                    $('.collapse.in').removeClass('in');
                    localStorage.setItem('menuHidden', '');
                } else {
                    $('#sidebar, #content, .footer, .navbar').addClass('active');
                    $('.collapse.in').addClass('in');
                    localStorage.setItem('menuHidden', '1');
                }
                $('a[aria-expanded=true]').attr('aria-expanded', 'false');
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
