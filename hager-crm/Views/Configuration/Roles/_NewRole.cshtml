@model List<hager_crm.ViewModels.EmployeeVM>
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Create Role</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="control-label">Role Name:</label>
                <input id="txtNewRole" type="text" class="form-control" required="required" />
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn btn-secondary" href="#" data-dismiss="modal">Close</a>
    <a class="btn btn-primary" href="#" data-dismiss="modal" onclick="createRole($('#txtNewRole').val())">Create</a>
</div>
<script type="text/javascript">
    function createRole(roleName) {
        $.post("/Configuration/CreateRole",
            {
                roleName: roleName
            },
            function () {
                $('#roles-panel').load('/Configuration/GetRoles');
            }
        );
    }
</script>