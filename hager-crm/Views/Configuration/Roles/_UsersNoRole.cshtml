@model List<hager_crm.ViewModels.EmployeeVM>
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Users With No Roles</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>User</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Fullname
                    </td>
                    <td>
                        <a href="#" onclick="deleteUser('@item.UserID')">Delete User</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    function deleteUser(UserId) {
        $.post("/Configuration/DeleteUser",
            {
                userId: UserId
            },
            function () {
                $('.modal-content').load('/Configuration/GetUsers?role=@ViewData["Role"]');
            }
        );
    }
</script>