@model IEnumerable<hager_crm.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Employees List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="InsertFromExcel" asp-controller="Employees" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="custom-file col-md-4">
            <label class="custom-file-label" for="theExcel">Upload Excel File:</label>
            <input type="file" class="custom-file-input" id="theExcel" name="theExcel" /><br />
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" value="Upload Data" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
<div class="overflow-auto">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JobPosition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KeyFob)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmergencyContactPhone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobPosition.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KeyFob)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmergencyContactPhone)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-light w-100" asp-action="Details" asp-route-id="@item.EmployeeID">Details</a>
                        <a class="btn btn-sm btn-light w-100" asp-action="Edit" asp-route-id="@item.EmployeeID">Edit</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-sm btn-outline-danger w-100" asp-action="Delete" asp-route-id="@item.EmployeeID">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
