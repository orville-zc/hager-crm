@model hager_crm.Models.Employee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<div>
    <h4>Employee: @Model.FullName</h4>
    <hr />
</div>

<div>
    <ul class="nav nav-pills" id="myTabs" role="tablist">
        <li class="nav-item">
            <a href="#basic" aria-controls="basic" role="tab" class="nav-link active" name="basic" data-toggle="tab" aria-selected="false">Basic Information</a>
        </li>
        @if (this.User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a href="#moreinfo" aria-controls="moreinfo" role="tab" class="nav-link" name="moreinfo" data-toggle="tab" aria-selected="false">More Information</a>
            </li>
        }

        <li class="nav-item">
            <a href="#emergencycontact" aria-controls="emergencycontact" role="tab" class="nav-link" name="emergencycontact" data-toggle="tab" aria-selected="false">Emergency Contact</a>
        </li>
    </ul>

    <div>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade ml-3 show active" id="basic">
                <br />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.FirstName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.LastName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LastName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.JobPosition)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.JobPosition.Position)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.EmploymentType)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.EmploymentType.Type)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CellPhone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CellPhone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.WorkPhone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.WorkPhone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DateJoined)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DateJoined)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Notes)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Notes)
                    </dd>
                </dl>
            </div>

            @if (this.User.IsInRole("Admin"))
            {
                <div role="tabpanel" class="tab-pane fade ml-3" id="moreinfo" aria-labelledby="moreinfo-tab">
                    <br />
                    <div class="container">
                    </div>
                    <dl class="row">
                        <dt class="col-sm-2">
                            Full Address
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayNameFor(model => model.EmployeeAddress1), @Html.DisplayNameFor(model => model.EmployeeAddress2)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.EmployeeProvince)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.EmployeeProvince.ProvinceName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.EmployeePostalCode)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.EmployeePostalCode)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.EmployeeCountry)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.EmployeeCountry.CountryName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DOB)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DOB)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Wage)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Wage)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Expense)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Expense)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.KeyFob)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.KeyFob)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Active)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Active)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.IsUser)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IsUser)
                        </dd>
                    </dl>
                </div>

            }


            <div role="tabpanel" class="tab-pane fade ml-3" id="emergencycontact" aria-labelledby="moreinfo-tab">
                <br />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.EmergencyContactName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.EmergencyContactName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.EmergencyContactPhone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.EmergencyContactPhone)
                    </dd>
                </dl>
            </div>

        </div>
        <hr />
        <div>
            <a asp-action="Edit" asp-route-id="@Model.EmployeeID">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>


